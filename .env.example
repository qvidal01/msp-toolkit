# MSP Toolkit - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# General Settings
MSP_COMPANY_NAME="Your MSP Name"
MSP_TIMEZONE="America/New_York"
MSP_LOG_LEVEL="INFO"

# Database Configuration (PostgreSQL - optional, defaults to SQLite)
# DB_HOST="localhost"
# DB_PORT="5432"
# DB_NAME="msp_toolkit"
# DB_USER="msp_user"
# DB_PASSWORD="your_secure_password_here"

# RMM Integration (ConnectWise Automate example)
RMM_PROVIDER="connectwise"
RMM_API_URL="https://your-rmm.example.com/api"
RMM_API_KEY="your_rmm_api_key_here"
RMM_API_SECRET="your_rmm_api_secret_here"

# Backup Integration (Veeam example)
# VEEAM_API_URL="https://veeam.example.com/api"
# VEEAM_API_KEY="your_veeam_api_key_here"
# VEEAM_USERNAME="admin"
# VEEAM_PASSWORD="your_veeam_password_here"

# PSA Integration (ConnectWise Manage example)
# PSA_API_URL="https://your-psa.example.com/api"
# PSA_COMPANY_ID="your_company_id"
# PSA_PUBLIC_KEY="your_public_key"
# PSA_PRIVATE_KEY="your_private_key"

# Cloud Providers
# AZURE_TENANT_ID="your_tenant_id"
# AZURE_CLIENT_ID="your_client_id"
# AZURE_CLIENT_SECRET="your_client_secret"

# AWS_ACCESS_KEY_ID="your_access_key"
# AWS_SECRET_ACCESS_KEY="your_secret_key"
# AWS_REGION="us-east-1"

# MCP Server Configuration
MCP_SERVER_PORT="3000"
MCP_LOG_LEVEL="INFO"
MCP_AUTH_ENABLED="true"
MCP_API_KEY="your_mcp_api_key_here"

# Email Notifications (for alerts)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USERNAME="your_email@example.com"
# SMTP_PASSWORD="your_email_password"
# SMTP_FROM="msp-toolkit@example.com"

# Slack Integration (for alerts)
# SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# Microsoft Teams Integration (for alerts)
# TEAMS_WEBHOOK_URL="https://outlook.office.com/webhook/YOUR/WEBHOOK/URL"
